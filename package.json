{
  "name": "basex",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "start": "turbo start",
    "lint": "run-s lint:prettier lint:eslint lint:workspace",
    "format": "run-s format:prettier format:eslint format:workspace",
    "lint:workspace": "turbo lint",
    "format:workspace": "turbo format",
    "lint:eslint": "run-s lint:eslint:backend lint:eslint:frontend",
    "lint:eslint:backend": "eslint 'src/backend/src/**' --parser-options project:'./src/backend/tsconfig.json'",
    "lint:eslint:frontend": "eslint 'src/frontend/src/**' --parser-options project:'./src/frontend/tsconfig.json'",
    "format:eslint": "run-s format:eslint:backend format:eslint:frontend",
    "format:eslint:backend": "eslint --fix 'src/backend/src/**' --parser-options project:'./src/backend/tsconfig.json'",
    "format:eslint:frontend": "eslint --fix 'src/frontend/src/**' --parser-options project:'./src/frontend/tsconfig.json'",
    "lint:prettier": "prettier --check --log-level silent src",
    "format:prettier": "prettier --write --log-level silent src"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "8.54.0",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tailwindcss": "^3.13.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.2",
    "turbo": "^1.11.3"
  }
}
